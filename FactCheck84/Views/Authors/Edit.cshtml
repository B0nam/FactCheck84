@model FactCheck84.Models.Author

@{
    ViewData["Title"] = "Edit";
}

<style>
    .base-form {
        background-color: #222;
        padding: 20px;
        border-radius: 30px;
        font-size: 15px;
    }
</style>

<h1>Edit</h1>

<div class="base-form">
<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AuthorStatusId" class="control-label"></label>
                <select asp-for="AuthorStatusId" class="form-control" asp-items="ViewBag.AuthorStatusId"></select>
                <span asp-validation-for="AuthorStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
